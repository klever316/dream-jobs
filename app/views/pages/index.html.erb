<div class="container center-align">
  <div class="card">
    <div class="card-content">
      
      <div class="row center-align">
        <h4 class="title">Bem vindo ao Dream Jobs.</h4>
      </div>
      
      <div class="row center-align">
        <em><h6 class="title">Encontre o job do seus sonhos aqui!</h6></em>
      </div>

      <div class="row">
        <% @jobs.each do |j| %>
          <div class="col s12 m4 l4">
            <%= render partial:'/pages/shared/job_home_card', locals: { j: j } %>
          </div>
        <% end %>
      </div>

      <% if !current_user %>
        <div class="row">
          <span>
            Para receber a nossa Newsletter 
            <a href="/users/sign_up">clique aqui.</a>
          </span>
        </div>
      <% end %>
      
    </div>
  </div>
</div>
