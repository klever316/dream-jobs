<div class="card hoverable">
  <div class="card-content">
    <span class="card-title"><%= j.title %></span>
    <div class="divider"></div>
    
    <p class="green-text">
      <strong class="valign-wrapper">
        <i class="material-icons prefix">place</i>
        <%= j.location %>
      </strong>
    </p>

    <p class="job-description left-align"><%= j.description[0..130] + '...' %></p>
    
    <br/>
    <div class="divider"></div>
    <br/>
    
    <%= link_to 'Mais detalhes', jobs_show_path(j), class:'waves-effect waves-light btn' %>
    
  </div>
</div>