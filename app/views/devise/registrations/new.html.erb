<div class="container">
  <div class="card">
    <span class="card-title">
      <h3 class="title">Sign up</h3>
    </span>
    <div class="card-content">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="input-field">
          <i class="material-icons prefix large">account_circle</i>
          <%= f.text_field :name, autofocus: true %>
          <%= f.label :name %>
        </div>

        <div class="input-field">
          <i class="material-icons prefix large">email</i>
          <%= f.email_field :email, autofocus: true %>
          <%= f.label :email %>
        </div>

        <div class="input-field">
          <i class="class material-icons prefix large">vpn_key</i>
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.label :password %><br />
          <% if @minimum_password_length %>
            <em class="additional-message">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div class="input-field">
          <i class="class material-icons prefix large">vpn_key</i>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <%= f.label :password_confirmation %>
        </div>

        <div class="actions">
          <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up
            <i class="material-icons right">send</i>
          </button>
        </div>

        <br />
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>